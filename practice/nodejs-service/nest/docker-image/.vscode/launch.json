{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Service",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": [
        "start"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Service - Watch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": [
        "start",
        "--watch",
        "--debug"
      ],
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}